{% extends "@Contao/content_element/text.html.twig" %}
{% block wrapper_tag %}{{ parent() }} style="margin-top: {{ data.space|deserialize_1 }}px; margin-bottom: {{ data.space|deserialize_2 }}px;"{% endblock %}
{% block text_media %}
  {% if image %}
      {% set figure_attributes = attrs()
          .addStyle("margin-top: #{data.imagemargin|deserialize_top}px; margin-right: #{data.imagemargin|deserialize_right}px; margin-bottom: #{data.imagemargin|deserialize_bottom}px; margin-left: #{data.imagemargin|deserialize_left}px; ")
      %}
      {% with {figure: image, figure_attributes: figure_attributes} %}{{ block('figure_component') }}{% endwith %}
  {% endif %}
{% endblock %}